@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageAdd";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Yeni Mesaj Gönderme Paneli </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alıcı</label>
                    @Html.TextBoxFor(model => model.Receiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(model => model.MessageContent,8,3, new { @class = "form-control" })
                </div>
                <button class="btn btn-outline-primary mr-2">Gönder</button>
                <button class="btn btn-outline-danger">İptal</button>
            </form>
        </div> 
    </div>
</div>

