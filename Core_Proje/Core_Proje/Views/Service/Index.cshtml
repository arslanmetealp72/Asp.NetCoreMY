@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetlerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.ServiceId
                                </th>
                                <th class="budget">
                                    @item.Title
                                </th>
                                <td> <a href="/Service/DeleteService/@item.ServiceId" class=" btn btn-outline-danger">Sil</a></td>
                                <td> <a href="/Service/EditService/@item.ServiceId" class=" btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Service/AddService/" class="btn btn-outline-info">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>



