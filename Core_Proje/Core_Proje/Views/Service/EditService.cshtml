@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Düzenleme Paneli</h4>
                <div class="table-responsive">
                    @Html.HiddenFor(model => model.ServiceId)
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    <br />
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-outline-success">Güncelle</button>
                </div>
            </div>
        </div>
    </div>
}

